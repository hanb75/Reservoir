    private void jMenuItem5ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // When Help>How to delete a donation is selected, pop up a dialog box
        JOptionPane.showMessageDialog(null, "To delete a donation, select the desired donation "
                + "\n to be removed and go to Edit>Delete Donation. "
                + "\n A dialog box will appear asking if you are sure you "
                + "\n want to delete the donation. Click \"Yes\".", "How to delete a donation", 
                JOptionPane.PLAIN_MESSAGE);
    }                                          

    private void jMenuItem6ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // When Help>How to export a file is selected, pop up a dialog box
        JOptionPane.showMessageDialog(null, "To export a file, go to File, Export file. A dialog"
                + "\n box will pop up asking you to select a location to"
                + "\n save the file. Click \"Browse\" to select a location."
                + "\n Then, click \"Save\".", "How to export a file", 
                JOptionPane.PLAIN_MESSAGE);
    }                                          

    private void jMenuItem1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // When File>Upload File is selected, open the file selector
        int returnVal = jUpload.showOpenDialog( this );
    }                                          

